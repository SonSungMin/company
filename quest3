        static void Main()

        {

            string arguments = "";

            string exePath = "";



            try

            {

                string ssoUserID = GetUserID();

                string baseDir = AppDomain.CurrentDomain.BaseDirectory;

                string exeName = "NewMainShell.exe";



                exePath = Path.Combine(baseDir, exeName);



                arguments = $"\"test\" \"test\" \"{ssoUserID}\" \"\" \"\" \"\" \"\" \"\" \"\" \"APS10100\" \"A\" \"amihics_update.exe\"";



                ProcessStartInfo startInfo = new ProcessStartInfo

                {

                    FileName = exePath,

                    Arguments = arguments,

                    UseShellExecute = true,

                    Verb = "runas"

                };



                Process.Start(startInfo);

            }

            catch (Exception ex)

            {

                MessageBox.Show($"{ex}\n\n{exePath} {arguments}", "알림", MessageBoxButtons.OK, MessageBoxIcon.Error);

            }

            finally

            {

                Application.Exit();

            }

        }
