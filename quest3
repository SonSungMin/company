using DevExpress.Xpf.Docking;
using Microsoft.Practices.Prism.Regions;
using System.ComponentModel.Composition;
using System.Windows;
using System.Windows.Controls;

namespace Amisys.Framework.Infrastructure.RegionAdapters
{ 
    [Export(typeof(DockManagerAdapter))]
    [PartCreationPolicy(CreationPolicy.NonShared)]
    [method: ImportingConstructor]
    public class DockManagerAdapter(IRegionBehaviorFactory behaviorFactory) : RegionAdapterBase<DockLayoutManager>(behaviorFactory)
    {
      protected virtual IRegion CreateRegion() => (IRegion)new SingleActiveRegion();

        protected virtual void Adapt(IRegion region, DockLayoutManager regionTarget)
        {
            foreach (BaseLayoutItem baseLayoutItem in DockLayoutManagerExtension.GetItems(regionTarget))
            {
                string regionName = RegionManager.GetRegionName((DependencyObject)baseLayoutItem);
                if (!string.IsNullOrEmpty(regionName) && baseLayoutItem is LayoutPanel layoutPanel && ((ContentItem)layoutPanel).Content == null)
                {
                    ContentControl contentControl = new ContentControl();
                    RegionManager.SetRegionName((DependencyObject)contentControl, regionName);
                    ((ContentItem)layoutPanel).Content = (object)contentControl;
                }
            }
        }
    }
}
